@{
  string personID = Guid.NewGuid().ToString();
}
<h2 style="margin-bottom: 36px">Add a person</h2>
<form asp-action="Create" method="post">
    <<div class="mb-3">
      <label for="person_ID">ID:</label>
      <input type="text" class="form-control" id="person_ID" placeholder="Enter person ID" name="PersonID">
    </div>
    <div class="mb-3">
      <label for="person_Name">Name:</label>
      <input type="text" class="form-control" id="person_Name" placeholder="Enter person name" name="PersonName">
    </div>
    <div class="mb-3">
      <label for="person_Address">Address:</label>
      <input type="text" class="form-control" id="person_Address" placeholder="Enter person address" name="PersonAddress">
    </div>
    <div class="mb-3">
      <label for="person_Phone">Phone:</label>
      <input type="text" class="form-control" id="person_Phone" placeholder="Enter person phone" name="PersonPhone">
    </div>
    <div class="mb-3">
      <label for="person_Email">Email:</label>
      <input type="email" class="form-control" id="person_Email" placeholder="Enter person email" name="PersonEmail">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-success" asp-action="Index">Danh sach nguoi</a>
    </div>
</form>

   


